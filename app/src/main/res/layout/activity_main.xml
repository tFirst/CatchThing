<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background_game"
    tools:context="com.catchthing.catchthing.MainActivity">

   <!-- <com.catchthing.catchthing.GifView
        android:id="@+id/gifview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" /> -->

    <RelativeLayout
        android:id="@+id/relativeLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_menu_background_game"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/buttonGoGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_toEndOf="@+id/textViewGoGame"
            android:layout_toRightOf="@+id/textViewGoGame"
            android:background="@drawable/arrow_right"
            android:onClick="goGameRight"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:fontFamily="cursive"
            android:text="@string/appDesc"
            android:textAlignment="center"
            android:textColor="#60d005"
            android:textSize="60sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="invisible"
            tools:ignore="RelativeOverlap" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="78dp"
            android:layout_toLeftOf="@+id/textViewGoGame"
            android:layout_toStartOf="@+id/textViewGoGame"
            android:background="@drawable/arrow_left"
            android:onClick="goGameLeft"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewGoGame"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_alignBottom="@+id/buttonGoGame"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="59dp"
            android:background="@drawable/begin"
            android:fontFamily="@font/annie_use_your_telescope"
            android:textAlignment="center"
            android:textColor="#58ae12"
            android:textSize="50sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>

</FrameLayout>
